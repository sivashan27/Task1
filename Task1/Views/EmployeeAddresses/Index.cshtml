@model IEnumerable<Task1.Data.EmployeeAddress>
<h2></h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblAddress').DataTable({
            "pageLength": 7,
            "aoColumnDefs": [{
                "bSortable": false,
                "aTargets": [-1]
            }]
        });

    });
</script>
<div class="panel panel-primary">
    <div class="panel-heading">
        Employee Address
        <a href="@Url.Action("Create")" class="btn-md btn-primary pull-right" style="padding:0px">
            <span class="glyphicon glyphicon-plus-sign"></span>
            New
        </a>
    </div>
    <div class="panel-body">
        <table id="tblAddress" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Address1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostalCode)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>
                        <td colspan="2">
                            <p data-placement="top" data-toggle="tooltip" title="Edit">
                                <a href="@Url.Action("Edit/"+ item.AddressId)" class="btn btn-primary btn-xs">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a href="@Url.Action("Delete/"+ item.AddressId)" class="btn btn-danger btn-xs" title="Delete">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
